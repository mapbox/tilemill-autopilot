<div class='colorpicker fill-e' data-key='line-color'></div>
<ul class='form'>
  <li class='text'>
    <h2>Line</h2>
  </li>
  <li>
    <label>Visibility</label>
    <div class='slider range' data-key='_line-zoom' data-min='0' data-max='22'></div>
  </li>
  <li>
    <label>Width</label>
    <div class='slider value' data-key='line-width' data-min='0' data-max='10' data-step='0.5'></div>
  </li>
  <li>
    <label>Join</label>
    <!-- @TODO Use carto reference.json for this! -->
    <select name='line-join'>
      <option value='miter'>Miter</option>
      <option value='round'>Round</option>
      <option value='bevel'>Bevel</option>
    </select>
  </li>
  <li>
    <label>Cap</label>
    <select name='line-cap'>
      <option value='butt'>Butt</option>
      <option value='round'>Round</option>
      <option value='square'>Square</option>
    </select>
  </li>
</ul>
